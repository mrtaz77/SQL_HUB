-- Concat Strings
SELECT EMPLOYEE_ID,(FIRST_NAME || ' ' || LAST_NAME) Name, SALARY*12 "Annual Salary"
FROM EMPLOYEES 
ORDER BY EMPLOYEE_ID;

-- Null Attributes
SELECT LAST_NAME, COMMISSION_PCT 
FROM EMPLOYEES ;

-- Date Comparison
SELECT LAST_NAME, SALARY 
FROM EMPLOYEES
WHERE HIRE_DATE BETWEEN TO_DATE('01-01-1990','DD-MM-YYYY') AND TO_DATE('12-31-2005','MM-DD-YYYY') ;


--  Pattern Matching
SELECT LAST_NAME, SALARY FROM EMPLOYEES WHERE LAST_NAME LIKE 'a% %' ;
SELECT LAST_NAME, SALARY FROM EMPLOYEES WHERE LAST_NAME LIKE 'S%' ;
SELECT LAST_NAME, SALARY FROM EMPLOYEES WHERE LAST_NAME LIKE '%s' ;
SELECT LAST_NAME, SALARY FROM EMPLOYEES WHERE LAST_NAME LIKE '%s%' ;
SELECT LAST_NAME, SALARY FROM EMPLOYEES WHERE LAST_NAME LIKE '%e% %' ;

-- Character matching 
SELECT LAST_NAME, SALARY FROM EMPLOYEES WHERE LAST_NAME LIKE 'a_' ;
SELECT LAST_NAME, SALARY FROM EMPLOYEES WHERE LAST_NAME LIKE '_ _ b' ;
-- At least 5 char present
SELECT LAST_NAME, SALARY FROM EMPLOYEES
WHERE LAST_NAME LIKE '_____%' ;

-- Nulls Comparison